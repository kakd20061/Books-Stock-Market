                  <div class="row">
                    <div class="col">
                      <h2 class="card-title text-dark mb-0">User accounts registered </h2>
                      <div class="text-center mt-3">
                        <span class="h2 font-weight-bold text-danger mb-0"><i class="fa-solid fa-user"></i> @Model.UserCount</span>
                      </div>
                    </div>
                    <div class="col-auto">
                      <span class="badge rounded-pill bg-danger"><i class="fas fa-chart-bar"></i></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col mt-5">
              <div class="card card-stats mb-4 mb-xl-0 card-background">
